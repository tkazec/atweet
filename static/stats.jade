doctype
html(lang="en")
	head
		meta(charset="utf-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
		title @#{info.screen_name}'s stats / atweet
		style !{css}
	body
		div.container
			h1
				span a
				| tweet
			
			p.lead @#{info.screen_name} has #{numeral(data.count.total).format("0,0")} recorded tweets, dating back to #{moment(data.beginning).format("MMMM YYYY")}.
			
			hr
			
			// stacked tweet timline bar chart (tweets, retweets, replies)
			// tweet type pie chart (tweets, retweets, replies)
			// word cloud
			// hash cloud, along with total count + percentage
			// top friends
			
			div.row
				div.span12
					svg#stats-timeline(width="940", height="110")
			
			div.row
				div.span3
					svg#stats-types(width="220", height="220")
				div.span3
					img(src="http://placehold.it/220x220")
				div.span3
					img(src="http://placehold.it/220x220")
				div.span3
					img(src="http://placehold.it/220x220&text=top+friends")
			
			div.row
				div.span6
					img(src="http://placehold.it/460x220&text=word+cloud")
				div.span6
					img(src="http://placehold.it/460x220&text=hashtag+cloud")
		
		script var data = !{JSON.stringify(data)}; !{js}